# ============================================
# KENBIKE ENVIRONMENT VARIABLES TEMPLATE
# ============================================
# Copy this file to:
# - .env (for local development without Docker)
# - .env.docker (for Docker development)
# - .env.production (for production deployment)
# ============================================

# ============================================
# APP CONFIGURATION
# ============================================
APP_NAME=Kenbike
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:3001

# ============================================
# DATABASE CONFIGURATION
# ============================================
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=kenbike

# Local: postgresql://user:pass@localhost:5432/db
# Docker: postgresql://user:pass@db:5432/db (use service name 'db')
DATABASE_URL="postgresql://user:password@host:5432/database"
DB_PROVIDER=postgresql
DB_LOGGING=true

# ============================================
# REDIS CONFIGURATION (Required for caching)
# ============================================
# Local: localhost
# Docker: redis (use service name 'redis')
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# Cache Control
ENABLE_CACHE=true
CACHE_TTL_PRODUCTS=300
CACHE_TTL_PRODUCT_LIST=180
CACHE_TTL_CATEGORIES=600
CACHE_TTL_NOTIFICATIONS=0

# ============================================
# SECURITY CONFIGURATION
# ============================================
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:3001

RATE_LIMIT_ENABLED=true
RATE_LIMIT_TTL=60000
RATE_LIMIT_REQUESTS=100
HELMET_ENABLED=true

# ============================================
# JWT CONFIGURATION
# ============================================
# Generate strong secret: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_change_this
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
JWT_RESET_PASSWORD_EXPIRY=1h

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
MAX_FILE_SIZE=2097152
UPLOAD_PATH=./uploads
UPLOAD_DIR=./uploads
BASE_URL=http://localhost:3000

# ============================================
# CART CONFIGURATION
# ============================================
CART_MAX_ITEMS=30
CART_EXPIRY_DAYS=0
STOCK_RESERVATION_ENABLED=false
STOCK_RESERVATION_DURATION_HOURS=24

# ============================================
# EMAIL CONFIGURATION
# ============================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_FROM=noreply@yourapp.com
MAIL_FROM_NAME=Kenbike

# ============================================
# BITESHIP CONFIGURATION
# ============================================
BITESHIP_API_KEY=your_biteship_api_key
BITESHIP_BASE_URL=https://api.biteship.com/v1
BITESHIP_COURIERS=jne,tiki,sicepat,jnt,pos,anteraja

# ============================================
# WAREHOUSE CONFIGURATION
# ============================================
WAREHOUSE_NAME="Your Store Name"
WAREHOUSE_ADDRESS="Your Address"
WAREHOUSE_CITY=YourCity
WAREHOUSE_DISTRICT=YourDistrict
WAREHOUSE_PROVINCE="Your Province"
WAREHOUSE_POSTAL_CODE=12345
WAREHOUSE_COUNTRY=Indonesia
WAREHOUSE_PHONE=08123456789
WAREHOUSE_LATITUDE=-6.0000
WAREHOUSE_LONGITUDE=106.0000

# ============================================
# ORDER CONFIGURATION
# ============================================
ORDER_PAYMENT_TIMEOUT_HOURS=24
ORDER_AUTO_COMPLETE_DAYS=3

# ============================================
# PAYMENT CONFIGURATION
# ============================================
USD_TO_IDR_RATE=15700
TAX_RATE=0

# ============================================
# MIDTRANS CONFIGURATION
# ============================================
MIDTRANS_SERVER_KEY=your_midtrans_server_key
MIDTRANS_CLIENT_KEY=your_midtrans_client_key
MIDTRANS_IS_PRODUCTION=false
MIDTRANS_MERCHANT_ID=your_merchant_id
MIDTRANS_WEBHOOK_URL=http://localhost:3000/api/v1/webhooks/midtrans

# ============================================
# PAYPAL CONFIGURATION
# ============================================
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_secret
PAYPAL_WEBHOOK_URL=http://localhost:3000/api/v1/webhooks/paypal

# ============================================
# COMPANY INFORMATION
# ============================================
COMPANY_NAME=Your Company
COMPANY_ADDRESS="Your Company Address"
COMPANY_EMAIL=your@email.com
COMPANY_PHONE=+628123456789
WHATSAPP_SUPPORT_NUMBER=+628123456789

# ============================================
# GOOGLE OAUTH
# ============================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# ============================================
# GEMINI AI (Optional)
# ============================================
GEMINI_API_KEY=your_gemini_api_key
